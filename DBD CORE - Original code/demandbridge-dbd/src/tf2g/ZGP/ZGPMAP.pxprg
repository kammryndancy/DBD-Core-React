31002 ! Parse Detail
31003 ! This routine will parse through the detail entered by the user
31004 ! and place it in the proper fields for writing to the file.
31050 PARSE_DETAIL:
31055 TEXT1$=""; TEXT2$=""; TEXT3$=""; TEXT4$="" ! clear all fields
31060 DETAIL_VALUE$=STP(DETAIL_VALUE$,1,$8A$) ! truncate the details
31065 DETAIL_VALUE$=STP(DETAIL_VALUE$) ! truncate the details
31070 NL%=POS($8A$=DETAIL_VALUE$) ! find the first nl in the details
31075 WHILE NL%<>0 ! while there is a nl found
31080 DETAIL_VALUE$(NL%,1)=" " ! convert it to a space
31085 NL%=POS($8A$=DETAIL_VALUE$)
31090 WEND 
31100 DTL_CNT=(LEN(DETAIL_VALUE$)/TXT_LEN)+1 ! calculate number of text lines needed
31105 DTL_CNT=INT(DTL_CNT) ! get int value
31110 IF DTL_CNT=5 THEN DTL_CNT=4 ! if all 320 are used, set number to 4
31115 SWITCH DTL_CNT ! on the total number of text lines needed
31120 CASE 1 ! if 1 is needed
31125 TEXT1$=DETAIL_VALUE$ ! set the value
31130 BREAK ! exit switch
31135 CASE 2 ! if 2 are needed
31140 BPOS=1 ! set the beginning position
31145 TEXT1$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31150 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31155 TEXT2$=DETAIL_VALUE$(BPOS) ! set the value
31160 BREAK ! exit switch
31165 CASE 3 ! if 3 are needed
31170 BPOS=1 ! set the beginning position
31175 TEXT1$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31180 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31185 TEXT2$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31190 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31195 TEXT3$=DETAIL_VALUE$(BPOS) ! set the value
31200 BREAK ! exit switch
31205 CASE 4 ! if all 4 are needed
31210 BPOS=1 ! set the beginning position
31215 TEXT1$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31220 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31225 TEXT2$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31230 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31235 TEXT3$=DETAIL_VALUE$(BPOS,TXT_LEN) ! set the value
31240 BPOS=BPOS+TXT_LEN ! increment the beginning position by the text length
31245 TEXT4$=DETAIL_VALUE$(BPOS) ! set the value
31250 BREAK ! exit switch
31255 DEFAULT ! default
31260 TEXT1$=""; TEXT2$=""; TEXT3$=""; TEXT4$="" ! clear all fields
31265 END SWITCH 
31399 RETURN 
