2190 GOSUB LD_SUBITMS; ITMS$=SUB_ITMS$
2200 REMOVE (TMP_FL1,KEY=STP(GRP_KEY$,2)+ITM$)
2210 LIST_BOX LOAD MNU_ITMS.CTL,CUR_ITM,*,ERR=*NEXT
2230 CUR_LVL=OBJ_IDX,GRPS$=STP(GRP_KEY$,2)+ITM$
