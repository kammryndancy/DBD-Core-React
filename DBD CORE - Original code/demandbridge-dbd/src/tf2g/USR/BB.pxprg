3710 ITM$=" "
3720 IF TYPE$="I" THEN PROCESS "MENUBAR.ITM","",GRP_KEY$,ITM$,STR(TMP_FL1),TYPE$,STR(SV_LEVEL),STR(EXISTS)
3730 IF TYPE$="G" THEN PROCESS "MENUBAR.GRP","",GRP_KEY$,ITM$,STR(TMP_FL1),TYPE$,STR(SV_LEVEL),STR(EXISTS)
3733 IF %CANCELED THEN EXIT 
3735 IF STP(ITM$,2)="" THEN EXIT 
3740 READ (TMP_FL1,KEY=STP(GRP_KEY$+ITM$,2),DOM=*END)IOL=8410
3750 %MENU_UPD=1; GOSUB REWRITE_GRP
3760 GOSUB RELOAD_ITM
3770 IF TYPE$="G" THEN GOSUB LOAD_TREE ! IF STP(GRP_KEY$,2)<>"" THEN GOSUB RELOAD_TREE_LEVEL ELSE GOSUB LOAD_TREE
3780 EXIT 
