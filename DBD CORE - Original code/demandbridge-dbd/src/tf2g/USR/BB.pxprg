1710 DEL_MENUBAR:
1720 K$=SCR_KEY$+"M"
1730 READ (LIB_FN,KEY=K$,DOM=*NEXT)
1740 MSGBOX "Are you sure you wish to delete the Menu Bar for panel: "+SEP+$09$+SCR_KEY$,"Just Checking","YESNO",X$
